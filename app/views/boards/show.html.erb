<div class='row'>
  <div class='col-xs-12'>
    <h1><%= @pins_on_board.first.board.name %></h1>
    <h2>Category</h2>
    <p><%= @pins_on_board.first.board.categories.first.title %></p>

<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Add Pin
</button>
<!-- Modal -->
<%= render :partial => 'pins/addPinModal' %>
  </div>
</div>

    <div id="main" role="main">
    <ul id='tiles'>

      <% @pins_on_board.each do |pob| %>
      <% pin = pob.pin %>
      <% height = 200+ rand()*200%>
      <li><a href="<%= pin.url %>"><img src="<%= pin.img_url %>" width="100%" height="<%= height %>"></a><%= pin.title %></a></li>

      <% end %>

    </ul>

  </div>




  <script>
  $(function() {
    // Call the layout function.
    $('#tiles li').wookmark({
      // Prepare layout options.
      align: 'center',
      // Prepare layout options.
      autoResize: true, // This will auto-update the layout when the browser window is resized.
      container: $('#main'), // Optional, used for some extra CSS styling
      offset: 5, // Optional, the distance between grid items
      outerOffset: 10, // Optional, the distance to the containers border
      itemWidth: 310 // Optional, the width of a grid item
    });
  });
  </script>


