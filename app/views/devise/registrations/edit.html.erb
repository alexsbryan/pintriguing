



<div id="logsign" class='container-fluid'>
<div class='row'>
<div class='col-xs-6 col-xs-offset-3 sign'>
<h2 class='text-center'>Edit</h2>
<%= link_to "Go to home page", root_url %>

<%= form_for(resource, html: {class:'form-horizontal text-center', method: :put}, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class='form-group'><%= f.label :first_name %><br />
  <%= f.text_field :first_name, class: 'col-sm-8 col-xs-offset-2', autofocus: true %></div>

  <div class='form-group'><%= f.label :last_name %><br />
  <%= f.text_field :last_name, class: 'col-sm-8 col-xs-offset-2' %></div>

  <div class='form-group'><%= f.label :email %><br />
  <%= f.email_field :email, class: 'col-sm-8 col-xs-offset-2' %></div>

  <div class='form-group'><%= f.label :password %><br />
    <%= f.password_field :password, class: 'col-sm-8 col-xs-offset-2', autocomplete: "off" %></div>

  <div class='form-group'><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: 'col-sm-8 col-xs-offset-2', autocomplete: "off" %></div>

 <div class="col-sm-offset-4 col-sm-4"><%= f.submit "Update", class: 'btn btn-primary submit'  %> </div>
<% end %>
<br>
<br>

<div class="col-sm-offset-4 col-sm-4 text-center"><%= render "devise/shared/links" %></div>
<br>
<br>

</div>
</div>
</div>
</div>

