
<h1 class='text-center'>Pin it</h1>


<form class="new-pin-it form-horizontal" role="form">
  <input type='hidden' name="pin_on_board[pin_id]" value='<%= pin %>'>
   <div class="form-group">
     <label for="title" class="col-sm-2 control-label">Title</label>
     <div class="col-sm-10">
       <input type="text" name="pin_on_board[title]" class="form-control" id="title" placeholder="Awesome Pin">
     </div>
   </div>
   <div class="form-group">
     <label for="description" class="col-sm-2 control-label">Description</label>
     <div class="col-sm-10">
       <input type="text" name="pin[description]" class="form-control" id="description" placeholder="Description">
     </div>
   </div>
   <div class="form-group">
     <label for='board' class='col-sm-2 control-label'>Board</label>
     <div class='col-sm-10'>
       <select name='pin_on_board[board_id]'>
         <option>
         <% boards.each(function(board) { %>
         <option value='<%= board.escape('id') %>'>
           <%= board.escape('name') %>
           </option>
         <% }) %>
       </select>
       </div>
     </div>
     <div class="form-group">
       <div class="col-sm-offset-5 col-sm-10">
         <button type="submit" class="btn btn-default submit">Pin it</button>
       </div>
     </div>
   </form>